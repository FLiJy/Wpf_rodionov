<Page x:Class="pr14.FilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Фильм" 
      Background="#ecf0f1">
    <ScrollViewer>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="8" 
                        Margin="0,0,30,0" Padding="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="5"/>
                    </Border.Effect>
                    <Image x:Name="imgPoster" Stretch="Uniform" HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock x:Name="txtTitle" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock x:Name="txtRating" FontSize="18" Foreground="#f39c12" FontWeight="Bold"/>
                        <TextBlock Text=" • " FontSize="18" Foreground="#95a5a6" Margin="10,0"/>
                        <TextBlock x:Name="txtAgeRating" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="+" FontSize="18" Foreground="#e74c3c"/>
                    </StackPanel>
                    <TextBlock x:Name="txtGenres" FontSize="16" Foreground="#7f8c8d" Margin="0,0,0,15"/>
                    <TextBlock x:Name="txtStartDate" FontSize="16" Foreground="#7f8c8d" Margin="0,0,0,20"/>
                    <TextBlock x:Name="txtDescription" FontSize="15" TextWrapping="Wrap" 
                               MaxWidth="700" LineHeight="22"/>
                </StackPanel>
            </Grid>

            <Separator Grid.Row="1" Margin="0,30" Background="#bdc3c7"/>

            <StackPanel Grid.Row="2" Margin="0,30,0,0">
                <TextBlock Text="СЕАНСЫ" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <ItemsControl x:Name="sessionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="8" 
                                    Margin="0,0,0,15" Padding="20" Background="White">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" Opacity="0.15" ShadowDepth="2"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding SessionDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                                   FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SessionTime, StringFormat={}{0:HH:mm}}" 
                                                   FontSize="14" Foreground="#7f8c8d"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" Text="{Binding Hall.Name}" 
                                               FontSize="15" HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="2" Text="{Binding Hall.Category}" 
                                               FontSize="14" Foreground="#3498db" HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="3" Text="{Binding Price, StringFormat={}{0:C}}" 
                                               FontSize="18" FontWeight="Bold" Foreground="#27ae60" 
                                               HorizontalAlignment="Center"/>

                                    <Button Grid.Column="4" Content="Выбрать место →" 
                                            FontSize="14" HorizontalAlignment="Right"
                                            Tag="{Binding Id}" Click="btnSelectSeat_Click"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>