<Page x:Class="pr14.OrderConfirmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Подтверждение заказа" 
      Background="#ecf0f1">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="✅" FontSize="60" HorizontalAlignment="Center"/>
            <TextBlock Text="БИЛЕТ УСПЕШНО КУПЛЕН!" FontSize="28" FontWeight="Bold" 
                       Foreground="#27ae60" HorizontalAlignment="Center"/>
            <TextBlock Text="Сохраните информацию о билете" FontSize="16" 
                       Foreground="#7f8c8d" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="30" 
                Margin="0,0,0,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <TextBlock Text="ФИЛЬМ:" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock Text="ЗАЛ:" FontWeight="Bold" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock Text="ДАТА И ВРЕМЯ:" FontWeight="Bold" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock Text="МЕСТА:" FontWeight="Bold" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock Text="ЦЕНА ЗА БИЛЕТ:" FontWeight="Bold" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock Text="ИТОГО:" FontWeight="Bold" FontSize="18" Margin="0,20,0,5" 
                                   Foreground="#2c3e50"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="txtFilm" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtHall" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock x:Name="txtDateTime" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock x:Name="txtSeats" FontSize="16" Margin="0,15,0,5" TextWrapping="Wrap"/>
                        <TextBlock x:Name="txtPrice" FontSize="16" Margin="0,15,0,5"/>
                        <TextBlock x:Name="txtTotal" FontSize="20" FontWeight="Bold" Margin="0,20,0,5" 
                                   Foreground="#27ae60"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="20" 
                HorizontalAlignment="Center" Margin="0,0,0,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="QR-КОД ДЛЯ ВХОДА" FontSize="16" FontWeight="Bold" 
                           Margin="0,0,0,15" Foreground="#2c3e50"/>
                <Border Width="150" Height="150" Background="#3498db" CornerRadius="8">
                    <TextBlock Text="QR" FontSize="40" FontWeight="Bold" Foreground="White" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Покажите этот код на входе в кинотеатр" 
                           FontSize="12" Foreground="#7f8c8d" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="На главную" Width="180" Height="50" FontSize="16"
                    Click="btnHome_Click"/>
            <Button Content="Личный кабинет" Width="180" Height="50" FontSize="16"
                    Click="btnPersonal_Click" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>