<Page x:Class="pr14.PersonalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Личный кабинет" 
      Background="#ecf0f1">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="30" 
                Margin="0,0,0,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="ЛИЧНЫЙ КАБИНЕТ" FontSize="28" FontWeight="Bold" 
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <TextBlock Text="ЛОГИН:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <TextBlock Text="EMAIL:" FontWeight="Bold" FontSize="16" Margin="0,15,0,10"/>
                        <TextBlock Text="ТЕЛЕФОН:" FontWeight="Bold" FontSize="16" Margin="0,15,0,10"/>
                        <TextBlock Text="ДАТА РЕГИСТРАЦИИ:" FontWeight="Bold" FontSize="16" Margin="0,15,0,10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="txtLogin" FontSize="16" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtEmail" FontSize="16" Margin="0,15,0,10"/>
                        <TextBlock x:Name="txtPhone" FontSize="16" Margin="0,15,0,10" Foreground="#7f8c8d"/>
                        <TextBlock x:Name="txtRegisterDate" FontSize="16" Margin="0,15,0,10"/>
                    </StackPanel>
                </Grid>

                <Button Content="Выйти из аккаунта" HorizontalAlignment="Left" 
                        Margin="0,30,0,0" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock Text="ИСТОРИЯ БИЛЕТОВ" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20"/>

                <ItemsControl x:Name="ticketsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="8" 
                                    Margin="0,0,0,20" Padding="25" Background="White">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" Opacity="0.15" ShadowDepth="2"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Session.Film.Title}" 
                                                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="📅 " FontSize="14"/>
                                            <TextBlock Text="{Binding Session.SessionDate, StringFormat={}{0:dd.MM.yyyy}}" FontSize="14"/>
                                            <TextBlock Text="  ⏰  " FontSize="14" Foreground="#95a5a6"/>
                                            <TextBlock Text="{Binding Session.SessionTime, StringFormat={}{0:HH:mm}}" FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="🎬 " FontSize="14"/>
                                            <TextBlock Text="{Binding Session.Hall.Name}" FontSize="14"/>
                                            <TextBlock Text=" (" FontSize="14" Foreground="#95a5a6"/>
                                            <TextBlock Text="{Binding Session.Hall.Category}" FontSize="14" Foreground="#3498db"/>
                                            <TextBlock Text=")" FontSize="14" Foreground="#95a5a6"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🎫 Место: " FontSize="14" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding RowNumber}" FontSize="14"/>
                                            <TextBlock Text=" ряд, " FontSize="14" Foreground="#95a5a6"/>
                                            <TextBlock Text="{Binding SeatNumber}" FontSize="14"/>
                                            <TextBlock Text=" место" FontSize="14" Foreground="#95a5a6"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding PurchaseDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                                   FontSize="12" Foreground="#7f8c8d" HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding Price, StringFormat=Стоимость: {0:C}}" 
                                                   FontSize="18" FontWeight="Bold" Foreground="#27ae60" 
                                                   Margin="0,15,0,0" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>