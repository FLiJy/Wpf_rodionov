<Page x:Class="pr14.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная" 
      Background="#ecf0f1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Grid.Row="0" BorderBrush="#bdc3c7" BorderThickness="0,0,0,1" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                <TextBox x:Name="txtSearch" Width="250" Height="35" 
                         TextChanged="txtSearch_TextChanged" 
                         FontSize="14" Padding="10"/>

                <Separator Width="1" Margin="20,0" Background="#bdc3c7"/>

                <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                <ComboBox x:Name="cmbSort" Width="180" Height="35" FontSize="14"
                          SelectionChanged="cmbSort_SelectionChanged">
                    <ComboBoxItem Content="По названию (А-Я)" Tag="title_asc" IsSelected="True"/>
                    <ComboBoxItem Content="По названию (Я-А)" Tag="title_desc"/>
                    <ComboBoxItem Content="По рейтингу ↓" Tag="rating_desc"/>
                    <ComboBoxItem Content="По рейтингу ↑" Tag="rating_asc"/>
                </ComboBox>

                <Separator Width="1" Margin="20,0" Background="#bdc3c7"/>

                <Button Content="👤 Личный кабинет" Width="160" Height="35" FontSize="14"
                        Click="btnPersonal_Click"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="20">
            <ItemsControl x:Name="filmsGrid" PreviewMouseLeftButtonDown="filmsGrid_PreviewMouseLeftButtonDown">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="240" ItemHeight="380"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="8" 
                                Margin="15" Padding="10" Width="220" Height="360"
                                Background="White" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                            </Border.Effect>
                            <StackPanel>
                                <Image Source="{Binding PosterUrl}" Height="260" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" 
                                           TextTrimming="CharacterEllipsis" Margin="0,10,0,5"
                                           TextAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                                    <TextBlock Text="{Binding Rating}" Foreground="#f39c12" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text=" • " Foreground="#95a5a6"/>
                                    <TextBlock Text="{Binding AgeRating, StringFormat={}{0}+}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="+" Foreground="#e74c3c"/>
                                </StackPanel>
                                <TextBlock Text="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                           Foreground="#7f8c8d" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>