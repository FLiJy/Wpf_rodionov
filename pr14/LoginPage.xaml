<Page x:Class="pr14.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход" 
      Background="#ecf0f1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="50" 
                Width="450" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="ВХОД В АККАУНТ" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Логин:" FontSize="16" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLogin" FontSize="16" Padding="12"/>

                <TextBlock Text="Пароль:" FontSize="16" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" FontSize="16" Padding="12"/>

                <Button Content="Войти" FontSize="18" Height="50" Margin="0,30,0,15"
                        Click="btnLogin_Click"/>

                <TextBlock Text="Нет аккаунта?" HorizontalAlignment="Center" FontSize="14" 
                           Foreground="#7f8c8d" Margin="0,15,0,5"/>
                <Button Content="Зарегистрироваться" FontSize="16" Height="45" 
                        Background="#2ecc71" Click="btnRegister_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>