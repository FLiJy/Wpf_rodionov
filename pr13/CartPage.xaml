<Page x:Class="pr13.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="LvCart" Margin="20">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Товар" Width="300" 
                        DisplayMemberBinding="{Binding Product.ProductName}"/>
                    <GridViewColumn Header="Цена" Width="100" 
                        DisplayMemberBinding="{Binding Product.Price, StringFormat={}{0:C}}"/>
                    <GridViewColumn Header="Кол-во" Width="80" 
                        DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Сумма" Width="100" 
                        DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:C}}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <TextBlock x:Name="TbTotal" FontSize="20" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Оформить заказ" Click="BtnCheckout_Click" 
                    Padding="20,10" Background="#FF007ACC" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>