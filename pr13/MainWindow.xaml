<Window x:Class="pr13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Онлайн-магазин" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#FF2D2D30" Height="50">
            <Button Content="Товары" Click="BtnProducts_Click" 
                    Margin="10,5" Padding="20,5" Background="#FF007ACC" Foreground="White"/>
            <Button Content="Корзина" Click="BtnCart_Click" 
                    Margin="10,5" Padding="20,5" Background="#FF007ACC" Foreground="White"/>
            <TextBlock x:Name="TbCartCount" Foreground="White" VerticalAlignment="Center" 
                       Margin="20,0" FontSize="14"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>